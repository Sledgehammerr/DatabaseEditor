<Window x:Class="WpfApp4.NewStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4.Model"
        mc:Ignorable="d"
        Title="NewStudent" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DataTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:Student x:Key="newStudent"/>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" FlowDirection="RightToLeft">
            <Button x:Name="cancelButton" Content="Cancel" Margin="5" Width="160" IsCancel="True"/>
            <Button x:Name="okButton" Content="OK" Margin="5" Width="160" IsDefault="True" Click="okButton_Click"/>
        </StackPanel>
        <ContentControl x:Name="contentControl1" Content="{StaticResource newStudent}" ContentTemplate="{StaticResource studentDataTemplate}" Width="792"/>
    </DockPanel>
</Window>
